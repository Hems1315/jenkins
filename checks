pipeline {
    agent none
    stages {
        stage('Check Slave 1') {
            agent { label 'slave1' } // Specify the label for slave1
            steps {
                script {
                    echo "Running on Slave 1"
                    sh 'echo "Hello from Slave 1"'
                    sh 'hostname' // Show hostname to verify it's the correct slave
                }
            }
        }
        stage('Check Slave 2') {
            agent { label 'slave2' } // Specify the label for slave2
            steps {
                script {
                    echo "Running on Slave 2"
                    sh 'echo "Hello from Slave 2"'
                    sh 'hostname' // Show hostname to verify it's the correct slave
                }
            }
        }
    }
}
